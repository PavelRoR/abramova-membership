#author
	width 100%
	padding 90px 0 0
	background-color: #191919
	background-image url(../img/black_bg.jpg)
	background-repeat no-repeat
	background-position center
	background-size: cover
	.container
		position relative
#janna_about
	position absolute
	transform: rotateY(180deg)
	width 100%
	max-width: 800px
	bottom: 0px;
	left: -100px;
.author_title
	font-size: 35px;
	font-family: "ProximaNovaBold", sans-serif;
	color: #fff;
	text-transform: uppercase;
	line-height: 1.15;
	text-align: center;
	margin: 0 auto 70px;
	letter-spacing: -1.3px;
.author_container
	float right
	width: 600px
.author_subtitle
	font-size: 24px;
	font-family: "ProximaNovaSemibold", sans-serif;
	color: #fff
	line-height: 1.375;
	margin-bottom: 30px
	margin-left: 4px
.author_list
	li
		position relative
		z-index 9
		padding-left: 32px
		font-size: 18px;
		font-family: "ProximaNova", sans-serif;
		color: #fff
		line-height: 1.444;
		margin-bottom: 15px
		list-style none
		&:last-child
			margin-bottom: 60px
		&:before
			content: ''
			position: absolute
			top: 7px;
			left: 4px;
			background-color: #C90100
			width: 10px;
			height: 10px;