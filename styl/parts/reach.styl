#reach
	width 100%
	padding 98px 0 116px
	background-color: #E3E3E3
	background-image url(../img/reach_bg.jpg)
	background-repeat no-repeat
	background-position: center right
	background-size: cover
.reach_title
	font-size: 39px;
	font-family: "ProximaNovaExtraBold", sans-serif;
	color: rgb(31, 31, 31);
	text-transform: uppercase;
	line-height: 1.13;
	width 100%
	max-width 470px
	padding-left: 31px
	border-left: 9px solid rgb(31, 31, 31);
	margin: 0 0 0 143px
	position relative
	z-index 9
	span
		display: inline-block
		font-family: "ProximaNova", sans-serif;
.reach_list
	padding-top: 54px
	margin-left: 143px
.reach_single
	position relative
	width 100%
	max-width 720px
	&:last-child
		margin-bottom: 0
	&:before
		content ''
		display: block
		position: absolute
		width 9px
		height 130px
		background-color: #c90100
		left 0
		bottom: 66px
	&:after
		content ''
		background-color: #c90100
		position: absolute
		width: 72px;
		height: 6px;
		left: 0;
		top: 10px;
